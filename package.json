  "repository": {
    "type": "git",
    "url": "https://github.com/mairu/meteor-electrify-client"
  },
  "keywords": [
    "electron",
    "meteor",
    "packager",
    "desktop"
  ],
  "bugs": {
    "url": "https://github.com/mairu/meteor-electrify-client/issues"
  },
  "homepage": "https://github.com/mairu/meteor-electrify-client",
  "dependencies": {
    "sockjs-client": "^1.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.2",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "parser": "babel-eslint",
    "rules": {
